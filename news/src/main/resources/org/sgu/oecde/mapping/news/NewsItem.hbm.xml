<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="oecdo_test">
  <class dynamic-insert="true" dynamic-update="true" name="org.sgu.oecde.news.NewsItem" table="news">
    <id name="id" type="int">
      <generator class="native">
        <param name="sequence">news_seq</param>
      </generator>
    </id>
    <property name="header" type="string"/>
    <property name="announcement" type="string"/>
    <property name="fullText" type="string"/>
    <property name="time" type="string"/>
    <property name="accessType" type="string"/>
    <property name="reviewNumber" type="integer"/>
    <property name="commentNumber" type="integer"/>
    <many-to-one class="org.sgu.oecde.core.users.Admin" name="author" fetch="join"/>
    <!--
    <set batch-size="15" cascade="none" fetch="join" name="tags">
      <key column="question_id" not-null="true"/>
      <one-to-many class="org.sgu.oecde.tests.Answer"/>
    </set>
    -->
  </class>
</hibernate-mapping>
