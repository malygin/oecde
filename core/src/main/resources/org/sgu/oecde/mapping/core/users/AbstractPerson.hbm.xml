<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <subclass discriminator-value="pers" dynamic-update="true" extends="org.sgu.oecde.core.users.AbstractUser" name="org.sgu.oecde.core.users.AbstractPerson">
    <property insert="false" name="name" type="string"/>
    <property column="second_name" insert="false" name="secondName" type="string"/>
    <property insert="false" name="surname" type="string"/>
  </subclass>
</hibernate-mapping>
