<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="oecdo_test">
  <class abstract="true" dynamic-update="true" name="org.sgu.oecde.core.users.AbstractUser" table="abstract_user">
    <id name="id" type="long"/>
    <discriminator column="DISCRIMINATOR" not-null="false" length="15"/>
    <property insert="false" name="username" length="30" not-null="true" type="string" unique="true" unique-key="uk_abs_user" update="false"/>
    <property insert="false" name="password" length="20" type="string"/>
    <property insert="false" name="enabled" scale="1" type="boolean"/>
    <property column="full_access" insert="false" name="fullAccess" scale="1" type="boolean"/>
    <property column="large_photo" insert="false" name="largePhoto" type="string"/>
    <property column="medium_photo" insert="false" name="mediumPhoto" type="string"/>
    <property column="small_photo" insert="false" name="smallPhoto" type="string"/>
    <many-to-one cascade="none" class="org.sgu.oecde.core.authentication.RoleItem" column="role" fetch="join" foreign-key="fk_user_role" name="authority"/>
  </class>
</hibernate-mapping>
