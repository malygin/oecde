<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="oecdo_test">
  <class abstract="true" dynamic-update="true" name="org.sgu.oecde.core.users.AbstractUser" table="abstract_user">
    <cache usage="read-write"/>
    <id name="id" type="long"/>
    <discriminator column="DISCRIMINATOR" length="15" not-null="false"/>
    <property insert="false" length="30" name="username" not-null="true" type="string" unique="true" unique-key="uk_abs_user" update="false"/>
    <property insert="false" length="20" name="password" not-null="true" type="string"/>
    <property insert="false" name="enabled" not-null="true" scale="1" type="boolean"/>
    <property column="full_access" insert="false" name="fullAccess" not-null="true" scale="1" type="boolean"/>
    <property column="large_photo" insert="false" name="largePhoto" type="string"/>
    <property column="medium_photo" insert="false" name="mediumPhoto" type="string"/>
    <property column="small_photo" insert="false" name="smallPhoto" type="string"/>
    <property column="original_id" insert="false" name="originalId" type="integer"/>
    <list batch-size="5" cascade="none" fetch="join" lazy="false" name="authorities" table="users_roles">
      <cache usage="read-write"/>
      <key column="user_id" foreign-key="fk_users_roles_user" not-null="true"/>
      <index column="role_order" length="3" type="integer"/>
      <element column="role" length="30" not-null="true">
        <type name="org.sgu.oecde.core.GenericEnumUserType">
          <param name="enumClass">org.sgu.oecde.core.authentication.RoleItem</param>
          <param name="identifierMethod">valueOf</param>
          <param name="valueOfMethod">parse</param>
        </type>
      </element>
    </list>
  </class>
</hibernate-mapping>
