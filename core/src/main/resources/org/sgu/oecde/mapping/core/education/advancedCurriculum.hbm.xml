<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="oecdo_test">
  <subclass discriminator-value="ADV" extends="org.sgu.oecde.core.education.Curriculum" name="org.sgu.oecde.core.education.AdvancedCurriculum">
    <property column="control_work" insert="false" name="gotControlWork" scale="1" type="boolean"/>
    <many-to-one class="org.sgu.oecde.core.education.Discipline" fetch="join" foreign-key="fk_adv_cur_disc" insert="false" name="discipline" not-null="true"/>
    <many-to-one class="org.sgu.oecde.core.education.Speciality" fetch="select" foreign-key="fk_adv_cur_spec" insert="false" name="speciality" not-null="true"/>
  </subclass>
</hibernate-mapping>
