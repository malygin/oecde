<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
xmlns:beans="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd">

 <global-method-security secured-annotations="enabled"/>

 <http >
    <custom-filter position="LOGOUT_FILTER" ref="logoutFilter" />
    <custom-filter position="LAST" ref="eventListner" />
    <intercept-url pattern="/index.xhtml" filters="none" access="IS_AUTHENTICATED_ANONYMOUSLY" />
    <intercept-url pattern="/Admin/**" access="ROLE_ADMIN" />
    <intercept-url pattern="/Student/**" access="ROLE_STUDENT,ROLE_ADMIN" />
    <intercept-url pattern="/Teacher/**" access="ROLE_TEACHER,ROLE_ADMIN" />
    <intercept-url pattern="/AdminLite/**" access="ROLE_SUPERVISOR,ROLE_ADMIN" />
    <anonymous />
    <remember-me services-ref="rememberMeServices"/>
    <form-login login-page="/" default-target-url="/LoginRedirect.c" always-use-default-target="true" authentication-failure-url="/index.xhtml?error=true" />
  </http>
  <beans:bean class="org.sgu.oecde.web.authentication.LoginListener"/>
  <beans:import resource="applicationContext-security.xml"/>
</beans:beans>