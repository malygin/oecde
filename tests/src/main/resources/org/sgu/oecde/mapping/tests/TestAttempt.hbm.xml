<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="oecdo_test">
  <subclass discriminator-value="test" extends="org.sgu.oecde.core.education.work.AbstractSelfDependentWorkResult" name="org.sgu.oecde.tests.TestAttempt">
   <set batch-size="15" cascade="all" fetch="select" inverse="true" name="answeredQuestions">
      <key foreign-key="fk_aquest_testattempt" column="result_id" not-null="true"/>
      <one-to-many class="org.sgu.oecde.tests.AnsweredQuestion"/>
   </set>
   <property name="points" type="integer" scale="3"/>
   <join table="tests_attempts">
    <key foreign-key="fk_test_att_res" column="id" not-null="true" on-delete="cascade"/>
    <property name="quantity" type="integer" scale="3"/>
    <property name="duration" type="integer" scale="3"/>
    <property name="rightAnswers" column="right_answers" type="integer" scale="3"/>
    <property column="type" name="type" not-null="true">
      <type name="org.sgu.oecde.core.GenericEnumUserType">
        <param name="enumClass">org.sgu.oecde.tests.TestAttemptType</param>
        <param name="identifierMethod">toInt</param>
        <param name="valueOfMethod">parse</param>
      </type>
    </property>
   </join>
  </subclass>
</hibernate-mapping>
