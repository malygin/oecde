<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
       ">

<!--<aop:aspectj-autoproxy proxy-target-class="false"/>-->
  <bean id="userDao" p:type="org.sgu.oecde.core.users.AbstractUser" parent="updateDao" >
      <!--<aop:scoped-proxy proxy-target-class="true"/>-->
  </bean>

  <bean id="specialityDao" p:type="org.sgu.oecde.core.education.Speciality" parent="basicDao" />
  <bean id="disciplineDao" p:type="org.sgu.oecde.core.education.Discipline" parent="basicDao" />
  <bean id="cityDao" p:type="org.sgu.oecde.de.education.City" parent="basicDao" />
  
  <bean id="studentDao" p:type="org.sgu.oecde.de.users.Student" parent="updateDao" />
  <bean id="teacherDao" p:type="org.sgu.oecde.de.users.Teacher" parent="updateDao" />
  <bean id="adminDao" p:type="org.sgu.oecde.core.users.Admin" parent="updateDao" />
  <bean id="supervisorDao" p:type="org.sgu.oecde.de.users.DeSupervisor" parent="updateDao" />
  <bean id="groupDao" p:type="org.sgu.oecde.de.users.Group" parent="updateDao" />

  <bean id="estimateDao" p:type="org.sgu.oecde.core.education.work.Estimate" p:sessionFactory-ref="sessionFactory" class="org.sgu.oecde.core.education.dao.EstimateDao" />
  <bean id="curriculumDao" p:type="org.sgu.oecde.de.education.DeCurriculum" p:sessionFactory-ref="sessionFactory" class="org.sgu.oecde.core.education.dao.CurriculumDao" />
  <bean id="imageDao" p:type="org.sgu.oecde.core.education.resource.Image" p:sessionFactory-ref="sessionFactory" class="org.sgu.oecde.core.education.dao.ResourceDao" />
  <bean scope="prototype" id="csDao" p:sessionFactory-ref="sessionFactory" class="org.sgu.oecde.core.education.dao.CurrentSemesterDao" />

</beans>
